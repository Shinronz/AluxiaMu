	<!--	<ItemDrop Cat="-1" MinLevel="1" MaxLevel="1" Count="10" Skill="-1" Luck="-1" Option="-1" Exc="-1" DropRate="10000" /> -->
	<!-- </Rule> -->
</SetItemDropManager>